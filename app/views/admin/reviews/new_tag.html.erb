<div class="container">
  <%= form_with model: @review, url: create_tag_reviews_path(@review.id), method: :patch do |f| %>
    <div class="row justify-content-center"> <!--d-flexは削除-->
      <div class="col-md-6">

        <!-- 車種名表示 -->
        <h3><%= @review.car_item.name %></h3>
        <!-- レビュータイトル表示 -->
        <h3><%= @review.title_rev %></h3>

        <!-- 主な使用シーン選択 -->
        <div class="mb-3">
          <label>主な使用シーン選択：</label>
          <div class="d-flex flex-wrap">
            <% @default_tags.each do |tag| %>
              <div class="form-check mr-3 mb-2">
                <%= check_box_tag 'review[name][]', tag, @review.tags.include?(tag), class: "form-check-input" %>
                <%= label_tag tag, tag, class: "form-check-label" %>
              </div>
            <% end %>
          </div>
        </div>
        <!-- 送信ボタン -->
        <div class="d-flex justify-content-center">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>