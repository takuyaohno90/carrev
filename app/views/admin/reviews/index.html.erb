<div class="container">
  <div>
    <div class="row justify-content-center">
      <h2 class="text-center mt-4">
        レビュー一覧
      </h2>
    </div>
    <div class="row">
      <table class="table table-bordered table-striped">
        <thead class="thead-light">
          <tr>
            <th>車種名</th>
            <th>メーカー</th>
            <th>タイトル</th>
            <th>投稿者</th>
            <th>投稿日</th>
            <th></th>
          </tr>
        </thead>
        <% @reviews.each do |review| %>
        <tbody>
          <tr>
            <td><%= review.car_item.name %></td>
            <td><%= review.car_item.maker.name %></td>
            <td><%= link_to review_path(review.id) do %><%= review.title_rev %><% end %></td>
            <td><%= review.user.first_name %><%= review.user.last_name %></td>
            <td><%= review.updated_at.strftime("%Y/%m/%d") %></td>
            <td><%= link_to "削除する", review_path(review.id), method: :delete, class:"link btn btn-sm btn-danger", data: { confirm: "削除してもよろしいですか？" }  %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>

    <%= paginate @reviews %>
  </div>

</div>