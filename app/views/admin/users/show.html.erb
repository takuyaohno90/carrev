<div class="container">
  <div class="row d-flex justify-content-center mt-2">
    <div class="col-lg-6">
      <h2 class="text-center">登録情報</h2>
      <table class="table table-bordered">
        <tr>
          <th>氏名</th>
          <td><%= @user.last_name %> <%= @user.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @user.last_name_kana %> <%= @user.first_name_kana %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
      </table>
      <div class="text-right">
        <%= link_to '編集する', edit_user_path(@user.id), class: "btn btn-sm btn-success mr-2" %>
        <%= link_to '削除する', user_path(@user.id), method: :delete, data: { confirm: "削除してもよろしいですか？" }, class: "btn btn-sm btn-danger" %>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-lg-12">
      <h2 class="text-center">レビュー一覧</h2>
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>車種名</th>
            <th>メーカー</th>
            <th>タイトル</th>
            <th>投稿日</th>
          </tr>
        </thead>
        <tbody>
          <% @user.reviews.each do |review| %>
            <tr>
              <td><%= review.car_item.name %></td>
              <td><%= review.car_item.maker.name %></td>
              <td><%= link_to review_path(review.id), class: "text-primary" do %><%= review.title_rev %><% end %></td>
              <td><%= review.updated_at.strftime("%Y/%m/%d") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
