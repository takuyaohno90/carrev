<div class="container">
  <div class="row justify-content-center mt-4">
    <%= form_with model: @user, url: user_path, method: :patch do |f| %>
      <table class="table table-bordered">
        <tr>
          <th>氏名</th>
          <td><%= f.text_field :last_name, class: 'form-control' %></td>
          <td><%= f.text_field :first_name, class: 'form-control' %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :last_name_kana, class: 'form-control' %></td>
          <td><%= f.text_field :first_name_kana, class: 'form-control' %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td colspan="2"><%= f.text_field :email, class: 'form-control' %></td>
        </tr>
        <tr>
          <th></th>
          <td colspan="2"><%= f.submit "編集する", class: 'btn btn-primary btn-block' %></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>
