

<div class="container">
  <div class="row d-flex justify-content-center">
    <h2 class="text-center">燃料編集</h2>
  </div>
  <%= form_with model: @fuel, url: fuel_path(@fuel.id), method: :patch do |f| %>
  <div class="row d-flex justify-content-center">
    <div class="col-md-6">
      <table class="table">
        <tbody>
          <td><% f.label :name, "燃料" %></td>
          <td><%= f.text_field :name , class:"form-control" %></td>
        </tbody>
      </table>
    </div>
  </div>
  <div class="text-center">
    <%= f.submit "編集", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>