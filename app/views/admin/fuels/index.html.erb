<div class="container">
  <div class="row d-flex justify-content-center">
    燃料登録
  </div>
  <%= form_with model: @fuel, url: fuels_path, method: :post do |f| %>
  <div class="row d-flex justify-content-center">
  <table>
    <thead>
      <tr>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= f.label :name, "燃料" %></td>
        <td><%=f.text_field :name %></td>
      </tr>
    </tbody>
  </table>
  </div>
  <div class="row d-flex justify-content-center align-center pl5">
    <%= f.submit "登録", class: "btn btn-primary" %>
  </div>
  <% end %>

  <div class="row d-flex justify-content-center">
    <table>
      <thead>
        <tr>
          <th>燃料一覧</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <% @fuels.each do |fuel| %>
      <tbody>
        <tr>
          <td><%= fuel.name %></td>
          <td><%= link_to "編集する", edit_fuel_path(fuel.id) %></td>
          <td><%= link_to "削除する", fuel_path(fuel.id), method: :delete %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>