<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div>
        <%= @maker.name %>の車種一覧
      </div>
      <div>
        <% @maker.car_items.each do |car_item| %>
          <li><%= car_item.name %></li>
          <%= form_with url: new_user_review_path, method: :get do |form| %>
          <%= form.hidden_field :car_item_id, :value => car_item.id %>
          <%= form.submit "投稿画面へ" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
