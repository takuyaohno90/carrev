<div class="container">

  <div class="row d-flex justify-content-conter" style="margin-top: 10px; max-width:100%;">
    <div class="col-lg-12">
    <table class="table table-bordered">
      <tr>
        <th>氏名</th>
        <td><%= current_user.last_name %> <%= current_user.first_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= current_user.last_name_kana %> <%= current_user.first_name_kana %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= current_user.email %></td>
      </tr>
    </table>

    </div>
  </div>

  <div class="row" style=" max-width:100%;">
    <div class="col-lg-12 text-right">
      <%= link_to '登録内容を編集する', user_informaition_edit_path, class: "btn btn-sm btn-success" %>
    </div>
  </div>

<div>
  <h2 style="font-size: 20px; font-weight: bold;">レビュー一覧</h2>
  <div class="row">
    <% @reviews.each do |review| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <!-- カードのヘッダー -->
        <div class="card-header">
          <h5 class="card-title"><%= review.title_rev %></h5>
        </div>
        <!-- カードの本文 -->
        <div class="card-body">
          <%= link_to user_review_path(review.id) do %>
            <% if review.image.present? %>
              <%= image_tag review.image, size: "200x150" , class:"card-img-top";  %>
            <% else %>
              <%= image_tag "no_image.jpg", size: "200x150" , class:"card-img-top"; %>
            <% end %>
          <% end %>
          <p class="card-text">車種名: <%= review.car_item.name %></p>
          <p class="card-text">メーカー: <%= review.car_item.maker.name %></p>
          <p class="card-text">投稿日: <%= review.updated_at.strftime("%Y/%m/%d") %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

</div>
