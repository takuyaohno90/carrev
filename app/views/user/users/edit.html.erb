<div class="container" style="max-width: 100%; max-height: 100%;">

  <div class="row with-border" style="height: 6vh;">
    <div class="col-lg-12 d-flex justify-content-center align-items-center" style="max-width:100%; background-color: #ffffff">
      <ul class="d-flex" style="list-style: none; color:#666;">
        <li style="margin-right: 40px;"><%= link_to "レビューを投稿", search_user_reviews_path, class: "custom-link" %></li>
        <li style="margin-right: 40px;"><%= link_to "レビューを検索", search_rev_user_reviews_path, class: "custom-link" %></li>
        <li style="margin-right: 80px;"><%= link_to "車を検索", new_user_car_search_path, class: "custom-link" %></li>
      </ul>
    </div>
  </div>  
  
  <div class="row justify-content-center" style="margin-top: 40px;">
    <div class="col-lg-4">
      <%= form_with model: @user, url: user_update_path, method: :patch do |f| %>
        <table class="table">
          <tr>
            <th>氏名</th>
            <td><%= f.text_field :last_name, class: 'form-control' %></td>
            <td><%= f.text_field :first_name, class: 'form-control' %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= f.text_field :last_name_kana, class: 'form-control' %></td>
            <td><%= f.text_field :first_name_kana, class: 'form-control' %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td colspan="2"><%= f.text_field :email, class: 'form-control' %></td>
          </tr>
          <tr>
            <th></th>
            <td colspan="2"><%= f.submit "編集する", class: 'btn btn-success btn-block' %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>
