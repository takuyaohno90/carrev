<div class="signup-form">
  <h2 class="text-center">新規登録</h2>
  <div class="container" style="max-width: 20%;">
    <%= form_with model: @user, url: user_registration_path do |f| %>
    <%= render "user/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email, class: "control-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード", class: "control-label" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "パスワード確認用",  class: "control-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :last_name, "名前(姓)", class: "control-label" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
      <%= f.label :first_name, "名前(名)", class: "control-label" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :last_name_kana, "フリガナ(セイ)", class: "control-label" %>
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control" %>
      <%= f.label :first_name_kana, "フリガナ(メイ)", class: "control-label" %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control" %>
    </div>

    <div class="form-group text-center">
      <%= f.submit "新規登録", class: "btn btn-primary" %>
    </div>
    <% end %>

    <div class="mt-2">
      会員登録がお済みの方は<%= link_to "こちら", new_user_session_path %>
    </div>
  </div>
</div>
